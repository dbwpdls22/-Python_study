def solution(s, k):
    start = []
    middle = []
    result = []
    for i in range(len(s)) :
        start.append(s[i])
        middle.append(s[i])
    middle.sort()

    count = 0
    i = 0
    while i < len(start) and count < k :
        if middle[len(s)-i-1] == start[i] :
            i += 1
            continue
        else :
            index = 0
            count += 1
            for j in range(len(start)) :
                if start[j] == middle[len(s)-i-1] :
                    index = j
                    origin_chr = start[i]
            start[i] = middle[len(s)-i-1]
            start[index] = origin_chr
        i += 1
    answer = ""
    for i in range(len(start)) :
        answer = answer + start[i]
    return answer
